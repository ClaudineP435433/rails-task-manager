
<h1>Edit a task</h1>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <input type="checkbox" id="task_check" name="task[completed]" value=<%= text_adapted %>>
    <label for="task_check">Completed ?</label>
  </div>

  <%= f.submit class: 'btn btn-success' %>
<% end %>
